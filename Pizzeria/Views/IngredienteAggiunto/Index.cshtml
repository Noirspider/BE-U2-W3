                @Html.DisplayFor(modelItem => item.Prodotto.NomeProdotto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingrediente.NomeIngrediente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdIngredienteAggiunto">Edit</a> |
