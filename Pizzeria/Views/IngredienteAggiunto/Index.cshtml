@model IEnumerable<Pizzeria.Models.IngredienteAggiunto>

@{
    ViewData["Title"] = "Index";
}
<div class="divform">
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdIngredienteAggiunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prodotto.IdProdotto) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingrediente.NomeIngrediente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdIngredienteAggiunto)
                </td>
