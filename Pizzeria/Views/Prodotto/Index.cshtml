@model IEnumerable<Pizzeria.Models.Prodotto>

@{
    ViewData["Title"] = "Index";
}
<div class="divform">
<h1>Gestione Prodotti</h1>

<p>
    <a asp-action="Create">Crea nuovo </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeProdotto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgProdotto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrezzoProdotto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoConsegna)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProdotto)
            </td>
         
             <td>
                        <img style="max-width: 100px;" src="@item.ImgProdotto" alt="Product Image" />
                    </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.PrezzoProdotto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoConsegna)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProdotto" class="btn btn-primary" style="text-decoration: none;">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProdotto" class="btn btn-primary" style="text-decoration: none;">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProdotto" class="btn btn-danger" style="text-decoration: none;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>